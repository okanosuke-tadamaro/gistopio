<%= render 'user_panel' %>

<div class="content_panel">

	<ul>
		<li><%= link_to "Back to List", posts_path %></li>
		<li><%= link_to "Edit", edit_post_path(@post) %></li>
		<li><%= link_to "Delete", post_path(@post), method: "delete" %></li>
	</ul>

	<div class="posts shadow">
		<h4 class="post_title"><i class="fa fa-lemon-o"></i><%= @post.title %></h4>
		<ul class="tags">
			<% @post.tags.each do |tag| %>
			<li><i class="fa fa-tag"></i><%= link_to tag.name, "/posts/tags/#{tag.name}" %></li>
			<% end %>
		</ul>
		<div class="clear"></div>
		<div class="border"></div>
		<div class="post_content"><%= markdown(@post.body) %></div>
		<ul class="action_link">
			<li><i class="fa fa-edit"></i><%= link_to "Edit", edit_post_path(@post) %></li>
			<li><i class="fa fa-trash-o"></i><%= link_to "Delete", post_path(@post), method: "delete" %></li>
		</ul>

		<div class="border"></div>
		<div class="comments">
		<h4><i class="fa fa-comments-o"></i>Comments</h4>
		<%= form_for [@post, @post.comments.build] do |f| %>
			<p><%= f.label "Post a comment" %><br>
			<%= f.text_area :body %></p>
			<p><%= f.submit %></p>
		<% end %>
		<% @comments.each do |comment| %>
			<div class="comments_content">
				<img src="<%= comment.user.avatar_url %>">
				<p><%= comment.body %></p>
			</div>
		<% end %>
		</div>
		</div>


	</div>
