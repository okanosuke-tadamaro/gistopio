<%= form_for @post do |f| %>
	<p><%= f.label :title %><br>
	<%= f.text_field :title %></p>
	<p><%= label_tag :tags %><br>
	<%= text_field_tag :tags, list_tags(@post.tags) %></p>
	<p><%= f.label :body %><br>
	<%= f.text_area :body %></p>
	<p><%= f.label :public_status %> <%= f.check_box :public_status %> / <%= f.label :sync_status %> <%= f.check_box :sync_status %></p>
	<p><%= f.submit %></p>
<% end %> 
