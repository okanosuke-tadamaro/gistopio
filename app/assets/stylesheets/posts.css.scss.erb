.clear { clear: both; }
.border { border-bottom: solid 1px lightgray; margin: 20px 0 20px 0; }
.shadow { box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.3); }

body { font-family: 'Open Sans Condensed'; background-image: url(<%= assets_path('bg.png') %>); background-attachment: fixed; }
p { font-size: 14px; }
a { text-decoration: none; color: #CB1B45; }
i { color: #CB1B45; }

.wrapper {
	width: 980px;
	padding-top: 40px;
	padding-bottom: 40px;
	margin: 0 auto;
}

.user_panel {
	.logo {
		img { width: 110px; margin: 20px; border-radius: 3px; }
		h1 { font-size: 36px; color: #CB1B45; padding-bottom: 10px; margin-bottom: 10px; border-bottom: solid 1px lightgray; }
		text-align: center;
		border-radius: 3px;
		color: gray;
		background-color: white;
		padding: 25px 10px 25px 10px;
		width: 130px;
	}
	.menu {
		i { color: white; width: 25px; text-align: center; margin-right: 10px; }
		.add_box {
			margin-top: 10px;
			width: 100%;
			height: 40px;
			background-color: #CB1B45;
			border-radius: 3px;
			line-height: 40px;
			color: white;
			font-size: 16px;
			text-indent: 10px;
		}
	}
	width: 150px;
	position: fixed;
	margin-top: 25px;
}

.content_panel {
	float: right;
	width: 800px;
}

.posts {
	background-color: white;
	.tags {
		li {
			display: inline;
			font-size: 14px;
			margin-left: 5px;
			i { margin-right: 3px; }
		}
		list-style-type: none;
		float: right;
	}
	.post_content {
		line-height: 22px;
		font-family: 'Source Sans Pro';
		font-size: 14px;
	}
	.show_status { float: left; margin-left: 0; margin-right: 10px; color: gray; i { margin-right: 3px; } }
	.action_link {
		text-align: right;
		margin-top: 20px;
		.action_right {
			i { margin-right: 3px; }
			display: inline;
			margin-left: 5px;
		}
	}
	.post_title {
		float: left;	
		font-size: 20px;
		i { margin-right: 5px; }
	}
	margin: 25px 0 25px 0;
	border-radius: 5px;
	padding: 20px 20px 20px 20px;
}

.comments {
	h4 {
		i { margin-right: 5px; }
		margin-bottom: 20px;
	}
	textarea {
		width: 100%;
		height: 30px;
		resize: none;
	}
	.comments_content{
		margin-top: 20px;
		img { width: 40px; height: 40px; margin-right: 10px; }
		p { display: inline; }
	}
}


.new_form {
		input[type="text"] {
			width: 100%;
		}
		textarea {
			width: 100%;
			height: 400px;
			resize: none;
		}
	}


/* === MODAL WINDOW === */
.modal-window {
	-webkit-transform: translate(0, 100%);
	-moz-transform: translate(0, 100%);
	-o-transform: translate(0, 100%);
	-ms-transform: translate(0, 100%);
	transform: translate(0, 100%);
	-webkit-transform: translate3d(0, 100%, 0);
	transform: translate3d(0, 100%, 0);
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 999;
	opacity: 0;
	line-height: 1.3;
	display: none\9;
}

.modal-window:target {
	-webkit-transform: translate(0, 0);
	-moz-transform: translate(0, 0);
	-o-transform: translate(0, 0);
	-ms-transform: translate(0, 0);
	transform: translate(0, 0);
	opacity: 1;
}

.is-active.modal-window { display: block\9; }
.modal-window:target { display: block\9; }
.modal-window .modal-inner {
	position: absolute;
	top: 50px;
	left: 50%;
	z-index: 20;
	margin-left: -490px;
	width: 880px;
	overflow-x: hidden;
	border-radius: 5px;
	background: #fff;
	-webkit-box-shadow: 0 0 30px rgba(0, 0, 0, 0.6);
	box-shadow: 0 0 30px rgba(0, 0, 0, 0.6);
	padding: 50px;
}

.modal-window .modal-inner p { padding: 0 20px; }

.modal-window .modal-close {
	display: block;
	text-indent: -100px;
	overflow: hidden;
}

.modal-window .modal-close:before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 10;
	background: url("data:image/png;base64,iVBORw0KG
	goAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAEElEQVR4
	2gEFAPr/AAAAAMwA0QDNTiUx4gAAAABJRU5ErkJggg==");
}

.modal-window .modal-close:after {
	content: '\00d7';
	position: absolute;
	top: 25px;
	left: 50%;
	z-index: 20;
	margin-left: 450px;
	background: #fff;
	border-radius: 2px;
	padding: 2px 8px;
	font-size: 1.2em;
	text-decoration: none;
	text-indent: 0;
}

.modal-window {
	-webkit-transition: opacity 0.4s;
	-o-transition: opacity 0.4s;
	transition: opacity 0.4s;
}
