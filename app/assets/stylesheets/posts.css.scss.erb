/* COMMON */
.left { float: left; }
.right { float: right; }
.clear { clear: both;}

@font-face {
	font-family: bebasneue;
	src: url('<%= asset_path('bebasneue.otf') %>');
}

body {
	font-family: 'Source Sans Pro';
	font-weight: 300;
}

.wrap {
	padding: 20px;
	background-color: #f9f9f9;
}

.margin {
	margin-top: 40px;
}

a { text-decoration: none; }
i { margin-right: 5px; }

textarea {
	font-family: 'PT Mono';
}

/* FORMS */
.form {
	textarea {
		height: 400px;
		resize: none;
	}
	.form_header {
		font-family: bebasneue;
		font-weight: bold;
	}
}

/* POSTS#INDEX */
.date {
	font-family: 'bebasneue';
	font-size: 30px;
	font-weight: bold;
	margin-bottom: 10px;
}

.post_blocks {
	list-style-type: none;
	li.post_block {
		
	}
}