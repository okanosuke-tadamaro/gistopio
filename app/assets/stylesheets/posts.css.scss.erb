$post_blocks_width: 980px + 15px;
$post_width:(980px - 45px) / 4;
$post_margin:15px;
$post_height:200px;

body {
	font-family: 'Roboto Condensed';
	background-image: url('<%= asset_path('background.png') %>');
	background-attachment: fixed;
}

/* COMMON */
.left { float: left; }
.right { float: right; }
.clear { clear: both;}

@font-face {
	font-family: bebasneue;
	src: url('<%= asset_path('bebasneue.otf') %>');
}

.wrap {
	width: 980px;
	padding-top: 50px;
	margin: 0 auto;
}

.margin {
	margin-top: 40px;
}

a { color: #9F353A; text-decoration: none; }
i { margin-right: 3px; color: #9F353A; }

textarea {
	font-family: 'PT Mono';
}

/* FORMS */
.new_form {
	textarea {
		height: 400px;
		width: 100%;
		resize: none;
	}
	.form_header {
		font-family: bebasneue;
		font-weight: bold;
	}
}

/* POSTS#INDEX */
.post_row {
	margin-bottom: 30px;
}

.date {
	font-family: 'bebasneue';
	font-size: 30px;
	font-weight: bold;
	margin-bottom: 10px;
}

.post_wrap {
	width: 980px;
}

.post_blocks {
	width: $post_blocks_width;
	margin-right: -15px;
	list-style-type: none;
	li.post_block {
		float: left;
		display: box;
		margin-right: $post_margin;
		margin-bottom: 15px;
		width: $post_width;
		height: $post_height;
		background-color: #f9f9f9;
		box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.3);
		font-size: 14px;
		position: relative;
		.post_header {
			height: 30px;
			line-height: 30px;
			padding: 0 10px 0 10px;
			overflow: hidden;
			background-color: rgba(0, 0, 0, 0.05);
			/*border-bottom: solid 1px lightgray;*/
		}
		.post_content {
			height: 120px;
			padding: 10px 10px 10px 10px;
			overflow: hidden;
			pre { overflow: hidden; }
		}
		.post_footer {
			height: 30px;
			line-height: 30px;
			padding: 0 10px 0 10px;
			ul {
				list-style-type: none;
				li { display: inline;}
			}
		}		
	}
	li.post_block:after {
		background: none repeat scroll 0 0 #777777;
    bottom: 18px;
    box-shadow: 0 15px 10px #777777;
    content: "";
    left: auto;
    max-width: 300px;
    position: absolute;
    right: 10px;
    top: 80%;
    transform: rotate(3deg);
    -webkit-transform: rotate(3deg);
    -moz-transform: rotate(3deg);
    -ms-transform: rotate(3deg);
    -o-transform: rotate(3deg);
    width: 50%;
    z-index: -1;
	}
}